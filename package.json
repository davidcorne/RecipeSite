{
  "name": "recipe-site",
  "version": "0.0.1",
  "description": "A website for easily viewing my recipes.",
  "engines": {
    "node": "17.x",
    "npm": "8.x"
  },
  "scripts": {
    "start": "node server.js",
    "test": "standard && mocha --exit utest.js && mocha itest.js",
    "itest": "mocha itest.js",
    "utest": "mocha --exit utest.js",
    "develop": "nodemon server.js -e js,pug,cache,metadata"
  },
  "dependencies": {
    "character-parser": "^3.1.0",
    "dictionary-en-gb": "^2.0.0",
    "express": "^4.17.1",
    "firstline": "^1.2.1",
    "graceful-fs": "^4.1.11",
    "jsdom": "^16.5.0",
    "jsonschema": "^1.2.4",
    "md5-file": "^3.2.3",
    "nspell": "^2.1.0",
    "pdf2json": "^2.0.1",
    "pug": "^3.0.2",
    "urldecode": "^1.0.1",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "async": "^2.1.4",
    "chai": "^4.3.4",
    "chai-string": "^1.5.0",
    "cheerio": "^1.0.0-rc.5",
    "commander": "^3.0.2",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.12",
    "request": "^2.88.2",
    "rewire": "^2.5.2",
    "standard": "^17.0.0",
    "supertest": "^3.0.0"
  },
  "standard": {
    "ignore": [
      "public/resources/strapdown.js"
    ]
  }
}
