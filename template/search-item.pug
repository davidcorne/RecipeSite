div
  h3.search-header
    a(href=item.path, target="_blank") #{item.label}
  div.search-details
    div
      p.collapse(title="Expand search context") +
      p.display-path #{item.displayPath}
    div.tags
      each tag in item.tags
        a.tag(href="/search?query=" + tag) #{tag}
  if debugView
    p.debug Score: #{item.match}
    p.debug Match: #{JSON.stringify(item.matchVerbose)}
  div.search-context
    // If we're looking at new recipes they won't have search context
    if item.context
      each line in item.context
        p.line #{line}