doctype html
html(lang="en")
  head
    title=Conversion
    link(rel="stylesheet", type="text/css" href="public/resources/index.css")
    script(src="public/resources/conversion.js")
    script.
      Conversion.conversions = !{JSON.stringify(conversions)}
  body
    include navigation-bar.pug

    h1 Conversion

    div.conversions
      select#ingredient(onchange="Conversion.onIngredientSelect(this);")
        option(value="", disabled="disabled", selected="selected") Ingredient
        each item in conversions
          option(value=item.ingredient) #{item.ingredient}
      input#user-input(oninput="Conversion.update();", type="number")
      select#convert-from(onchange="Conversion.rateChange();")
        option(value="", disabled="disabled", selected="selected") Unit
      input#output(readonly="readonly")
      select#convert-to(onchange="Conversion.rateChange();")
        option(value="", disabled="disabled", selected="selected") Unit


